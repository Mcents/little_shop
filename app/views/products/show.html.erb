<%= @product.name %>
<%= @product.description %>
<%= @product.price %>

<% if @product.active?  %>
<%= button_to "Add Product", shopping_carts_path(product_id: @product.id), class: "btn btn-success"%>
<% elsif @product.retired? %>
<%= button_to "Item Retired", products_path, class: "btn btn-success"%>
<% end %>
<% if current_user.admin? %>
  <%= link_to "Delete", product_path(@product), method: :delete %>
<% end %>
