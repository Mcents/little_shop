<% @order.products.uniq.each do |product| %>
<%= link_to product.name, product_path(product) %> <br>

$<%= product.price %>
<br>
<br>
Quantity: <%= @order.quantity[product] %>
<br>
line item total $ <%= @line_item = @order.quantity[product] * product.price %><br>
